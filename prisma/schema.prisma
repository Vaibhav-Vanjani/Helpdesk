generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  email     String @unique
  password  String
  userType  String
  isActive Boolean @default(true)
  userId String @default("NONE")
}

model Organisation{
  id Int @id @default(autoincrement())
  organisationName String @unique
  isActive Boolean @default(true)
}

model Project{
  id Int @id @default(autoincrement())
  projectName String @unique
  isActive Boolean @default(true)
  organisationName String
  managerId String
}

model UserMapping{
  id Int @id @default(autoincrement())
  userId String
  projectName String
  organisationName String
}

model UserIdMapping{
  id Int @id @default(autoincrement())
  invitationId String
  role String
  projectName String
}